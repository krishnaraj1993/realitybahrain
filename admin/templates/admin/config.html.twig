{% extends 'base.html.twig' %}

{% block title %}configuration
{% endblock %}

{% block body %}
	<div class="tab-vertical">
		<ul class="nav nav-tabs" id="myTab3" role="tablist">
			<li class="nav-item">
				<a class="nav-link active" id="home-vertical-tab" data-toggle="tab" href="#home-vertical" role="tab" aria-controls="home" aria-selected="true">Property Type</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" id="profile-vertical-tab" data-toggle="tab" href="#profile-vertical" role="tab" aria-controls="profile" aria-selected="false">EWA</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" id="contact-vertical-tab" data-toggle="tab" href="#contact-vertical" role="tab" aria-controls="contact" aria-selected="false">Property Status</a>
			</li>
		</ul>
		<div class="tab-content" id="myTabContent3">
			<div class="tab-pane fade show active" id="home-vertical" role="tabpanel" aria-labelledby="home-vertical-tab">
				<form class="form-inline" method="post" style="background-color: #d0cfcf;padding: 4px;">
					<div class="form-group">
						<input type="text" name="name" placeholder="Name" class="form-control">
					</div>
					<div class="form-group">
						<input type="text" name="description" placeholder="description" class="form-control">
					</div>
					<input type="hidden" name="action" value="status">
					<button type="submit" class="btn btn-primary btn-sm" style="margin-left: 10%;">Save Data</button>
				</form>
				<div class="table-responsive">
					<table class="table table-striped table-bordered first dataTable">
						<tr>
							<th>Name</th>
							<th>Description</th>
							<th>Action</th>
						</tr>
						{% for status in propertyStatus %}
							<tr>
								<td>{{ status.name }}</td>
								<td>{{ status.description }}</td>
								<td>
									<div class="btn-group btn-group-toggle" data-toggle="buttons">
										<label class="btn btn-primary btn-sm">
											<input type="radio" name="options" id="option2">
											Update
										</label>
										<a href="status/{{ status.id }}/delete" class="btn btn-danger btn-sm">
											<input type="radio" name="options" id="option3">
											Delete
										</a>
									</div>
								</td>
							</tr>
						{% endfor %}
					</table>
				</div>
			</div>
			<div class="tab-pane fade" id="profile-vertical" role="tabpanel" aria-labelledby="profile-vertical-tab">
