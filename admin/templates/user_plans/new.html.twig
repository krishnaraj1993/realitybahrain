{% extends 'base.html.twig' %}

{% block title %}Admin Users
{% endblock %}

{% block body %}

	<div class="body-wrapper">
		<div class="row">
			<div class="col-sm-6"></div>
			<div class="col-sm-6 card">
				<div class="formcontainer card-body">
					<form action="" method="POST">
						<div class="form-group">
							<label for="fname" class="col-form-label">Plan Title</label>
							<input type="hidden" name="id" id ="id" value="{{data['id']}}">
							<input type="text" class="form-control" id="fname" name="title" value="{{data['title'] }}" placeholder="Your Title.." required>
						</div>

						<div class="form-group">
							<label for="fname" class="col-form-label">Plan Description</label>
							<input type="text" class="form-control" id="lname" name="description" value="{{data['description'] }}" placeholder="Your description.." required>
						</div>

						<div class="form-group">
							<label for="fname" class="col-form-label">BHD</label>
							<input type="text" class="form-control" id="bhd" name="bhd" value="{{data['bhd'] }}" placeholder="Your BHD.." required>
						</div>

						<div class="form-group">
							<label for="fname" class="col-form-label">Six Mounth Package</label>
							<input type="text" class="form-control" id="sixmp" name="sixmp" value="{{data['sixmp'] }}" placeholder="amount.." required>
						</div>

						<div class="form-group">
							<label for="strength" class="col-form-label">Annual Package</label>
							<input type="text" class="form-control" id="annualpack" name="annualpack" value="{{data['annualpack'] }}" placeholder="Your annualpack.." required>

						</div>
						<div class="form-group">
							<label for="fname" class="col-form-label">Promo Package</label>
							<input type="text" class="form-control" id="promopack" name="promopack" value="{{data['promopack'] }}" placeholder="promopack.." required>
						</div>

						<div class="form-group">
							<label for="fname" class="col-form-label">Available Listings</label>
							<input type="text" class="form-control" id="listing" name="listing" value="{{data['listing'] }}" placeholder="listing.." required>
						</div>

						<div class="form-group">
							<label for="fname" class="col-form-label">CRM Enable &nbsp;&nbsp;&nbsp;</label>
							<label class="custom-control custom-radio custom-control-inline">
								<input type="radio" name="crm" value="1" {% if (data['crm'])==1 %} checked=""  {% endif %} class="custom-control-input"><span class="custom-control-label">Yes</span>
							</label>
							<label class="custom-control custom-radio custom-control-inline">
								<input type="radio" name="crm" value="0" {% if (data['crm'])==0 %} checked=""  {% endif %} class="custom-control-input"><span class="custom-control-label">No</span>
							</label>
						</div>

						<div class="form-group">
							<label for="fname" class="col-form-label">Number Agents to allowed</label>
							<input type="text" class="form-control" id="agent" name="agent" value="{{data['agent'] }}" placeholder="agent.." required>
						</div>

						<div class="form-group">
							<label for="fname" class="col-form-label">Fetured</label>
							<input type="text" class="form-control" id="fetured" name="fetured" value="{{data['fetured'] }}" placeholder="fetured.." required>
						</div>

						<div class="form-group">
							<label for="fname" class="col-form-label">Premium</label>
							<input type="text" class="form-control" id="promo" name="promo" value="{{data['promo'] }}" placeholder="promo.." required>
						</div>

						<div class="form-group">
							<input class="btn btn-primary" type="submit" value="Submit" style="width: 100%;">
						</div>
					</form>
				</div>
			</div>
		</div>


	</div>
{% endblock %}
